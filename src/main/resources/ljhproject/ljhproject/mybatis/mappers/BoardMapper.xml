<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ljhproject.ljhproject.mybatis.mappers.BoardMapper">

    <select id="findAllBoard" resultType="ljhproject.ljhproject.dto.BoardDto">
        SELECT * FROM ljh_board_tb
    </select>


    <insert id="insertBoard">
        INSERT INTO ljh_board_tb(b_Title, b_Contents)
        VALUE(#{b_Title}, #{b_Contents})
    </insert>


    <update id="updateBoard">
        UPDATE ljh_board_tb
        SET b_Title = #{b_Title}, b_Contents = #{b_Contents}
        WHERE b_Id = #{b_Id}
    </update>

    <delete id="deleteBoard">
        DELETE FROM ljh_board_tb
        WHERE b_Id = #{b_Id}
    </delete>

</mapper>